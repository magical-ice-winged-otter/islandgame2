                }
            case 106:
                msgbox(format(
                    "Ho-ho, an Exp Candy L? I'll give you 2,000 coins for it!"
                ), MSGBOX_YESNO)
                if (var(VAR_RESULT) == YES) {
                    addcoins(2000)
                    updatecoinsbox(18,1)
                    removeitem(ITEM_EXP_CANDY_L)
                    playse(SE_SHOP)
