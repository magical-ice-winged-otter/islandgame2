mapscripts ISLANDGAME_MINTY_MEADOWS_3_MapScripts {}


script ISLANDGAME_MINTY_MEADOWS_3_Ressy {
    lock
    msgbox(ISLANDGAME_MINTY_MEADOWS_3_RessyTalk)
    release
}

text ISLANDGAME_MINTY_MEADOWS_3_RessyTalk {
    format(
        "The mysterious man stares blankly into the vast horizon. \p"
        "What a loser. You should like, just forget he exists and stuff. \p"
        "Definitely don't come back here later. It would be a huge waste of time. \p"
        "Yup."
        )
}

script ISLANDGAME_MINTY_MEADOWS_3_Chimecho {
    lock
    faceplayer
    playmoncry(SPECIES_GALLADE,CRY_MODE_NORMAL)
    msgbox(ISLANDGAME_MINTY_MEADOWS_3_ChimechoTalk)
    applymovement(2, Common_Movement_FaceOriginalDirection)
    release
}

text ISLANDGAME_MINTY_MEADOWS_3_ChimechoTalk {
    format(
        "{COLOR DARK_GRAY}Gallade! {COLOR BLUE}(I long for a worthy adversary!)"
        )
}

